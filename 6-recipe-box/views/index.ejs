<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- bootstrap link -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  <link rel="stylesheet" href="css/style.css">
  <title>All Recipes</title>
</head>
<body class="bg-primary">
  <main class="container">
    <h1 class="fw-bolder text-white text-center mt-5">Recipe Box</h1>

    <!-- list all recipes  -->
    <section class="bg-white mt-3 mb-5">
      <h2 class="bg-success ps-5 py-3">Recipes</h2>
      <div class="recipe-title p-2 px-5">
      <ul class="p-0">
        <% for( let ind = 0; ind < recipes.length; ind++ ) { %>
        <li class="recipe">
          <!-- get recipe detail  -->
          <a href="/<%=ind %>"><%= recipes[ind].recipe  %></a>
        </li>
        <% } %>
      </ul>
      </div>
    </section>

    <section class="bg-white">
      <h2 class="bg-success ps-5 py-3"><%= recipes[currentRecipe].recipe %>
        <span>
          <!-- delete button  -->
          <a href="/delete/start" class="delete-btn"><i class="fa-solid fa-trash"></i></a>
          <!-- edit button  -->
          <a href="/edit/start"><i class="fa-solid fa-pen-to-square"></i></a>
        </span>
      </h2>
      <div class="recipe-directions p-2 px-5">
        <!-- list all ingredients  -->
        <article>
          <h3>Ingredients: </h3>
          <div>
            <ul>
              <% for( let ingredient of recipes[currentRecipe].ingredients ) { %>
              <li><%= ingredient  %></li>
              <% } %>
            </ul>
          </div>
        </article>
        <!-- list all steps for recipe  -->
        <article>
          <h3>Directions: </h3>
          <div>
            <ol>
              <% for( let ingredient of recipes[currentRecipe].directions ) { %>
              <li><%= ingredient  %></li>
              <% } %>
            </ol>
          </div>
        </article>
      </div>
      <!-- add new recipe  -->
      <aside class="bg-success ps-5 py-3">
        <a href="/add"><i class="fa-regular fa-square-plus"></i></a>
      </aside>
    </section>

    <!-- delete recipe confirmation modal  -->
     <% if (to_delete || to_edit || to_add) { %>
      <div class="card-cover position-fixed">
        <div class="card <%= !to_delete && 'form-card'%>">
          <% if (to_delete) { %>
            <!-- delete recipe template  -->
            <%- include("partials/delete.ejs")  %>
          <% } else { %>
            <!-- edit and new recipe template  -->
            <%- include("partials/form.ejs")  %>
          <% } %>
        </div>
      </div>
     <% } %>

  </main>

  <!-- font awesome script  -->
  <script src="https://kit.fontawesome.com/6036f5d002.js" crossorigin="anonymous"></script>

  <!-- bootstrap script  -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>