<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- bootstrap link -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  <link rel="stylesheet" href="css/style.css">
  <title>All Recipes</title>
</head>
<body class="bg-success">
  <main class="container">
    <h1 class="fw-bolder text-white text-center mt-5">Recipe Box</h1>

    <section class="bg-white my-5 p-2 px-5">
      <h2>Recipes</h2>
      <div class="recipe-title">
      <ul class="p-0">
        <% for( let ind = 0; ind < recipes.length; ind++ ) { %>
        <li class="recipe">
          <a href="/<%=ind %>"><%= recipes[ind].recipe  %></a>
        </li>
        <% } %>
      </ul>
      </div>
    </section>

    <section class="bg-white p-2 px-5">
      <h2><%= recipes[currentRecipe].recipe  %></h2>
      <div class="recipe-directions">
        <article>
          <h3>Ingredients: </h3>
          <div>
            <ul>
              <% for( let ingredient of recipes[currentRecipe].ingredients ) { %>
              <li><%= ingredient  %></li>
              <% } %>
            </ul>
          </div>
        </article>
        <article>
          <h3>Directions: </h3>
          <div>
            <ol>
              <% for( let ingredient of recipes[currentRecipe].directions ) { %>
              <li><%= ingredient  %></li>
              <% } %>
            </ol>
          </div>
        </article>
      </div>
    </section>
  </main>

  <!-- bootstrap script  -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>